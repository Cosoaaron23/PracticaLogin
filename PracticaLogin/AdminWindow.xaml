<Window x:Class="PracticaLogin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administración" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#121212" BorderBrush="#00E5FF" BorderThickness="1"
        Loaded="Window_Loaded" MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="RowBackground" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#444"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#00E5FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#121212"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3300E5FF"/>
                    <Setter Property="Foreground" Value="#00E5FF"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="PANEL DE ADMINISTRACIÓN" Foreground="#00E5FF" FontSize="28" FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00E5FF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Gestión de usuarios y auditoría del sistema" Foreground="#888" FontSize="14" Margin="2,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                <TextBlock Text="🔍" Foreground="#888" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16"/>
                <TextBox x:Name="txtBusqueda" Width="250" Height="35" Background="#1E1E1E" Foreground="White" 
                         BorderBrush="#444" BorderThickness="1" VerticalContentAlignment="Center" Padding="10,0"
                         TextChanged="TxtBusqueda_TextChanged" FontSize="14" HorizontalContentAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="dgUsuarios" Grid.Column="0" Margin="0,0,25,0" SelectionChanged="DgUsuarios_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}"/>
                    <DataGridTextColumn Header="USUARIO" Binding="{Binding Username}" Width="*" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}"/>
                    <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="1.5*" ElementStyle="{StaticResource CenteredCell}"/>

                    <DataGridTextColumn Header="CONTRASEÑA" Binding="{Binding Password}" Width="120" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCell}">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="ROL" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Rol}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox Text="{Binding Rol}" IsEditable="True" HorizontalContentAlignment="Center">
                                    <ComboBoxItem Content="USER" HorizontalContentAlignment="Center"/>
                                    <ComboBoxItem Content="ADMIN" HorizontalContentAlignment="Center"/>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="ESTADO" Binding="{Binding EstadoLegible}" Width="90" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCell}">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="Baneado">
                                        <Setter Property="Foreground" Value="#FF4444"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Activo">
                                        <Setter Property="Foreground" Value="#00CC66"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
                <StackPanel Margin="20" HorizontalAlignment="Stretch">
                    <TextBlock Text="EDITAR SELECCIONADO" Foreground="#00E5FF" FontWeight="Bold" FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <TextBlock Text="Usuario Seleccionado:" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblSelectedUser" Text="Ninguno" Foreground="White" FontWeight="Bold" FontSize="18" Margin="0,5,0,20" HorizontalAlignment="Center"/>

                    <TextBlock Text="Modificar Rol:" Foreground="#888" FontSize="12" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="cmbRol" Height="35" Margin="0,0,0,20" Background="#252525" Foreground="Black" Padding="5" HorizontalContentAlignment="Center">
                        <ComboBoxItem Content="USER" HorizontalContentAlignment="Center"/>
                        <ComboBoxItem Content="ADMIN" HorizontalContentAlignment="Center"/>
                    </ComboBox>

                    <TextBlock Text="Resetear Contraseña:" Foreground="#888" FontSize="12" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="txtNuevaPass" Height="35" Background="#252525" Foreground="White" BorderBrush="#444" Margin="0,0,10,0" HorizontalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="APLICAR" Click="BtnCambiarPass_Click" Width="80" Height="35" Background="#333" Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="Bold">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Separator Background="#333" Margin="0,0,0,25"/>

                    <Button x:Name="btnBanear" Content="BLOQUEAR ACCESO" Click="BtnBanear_Click" 
                            IsEnabled="False"
                            Background="#333" Foreground="#666" FontWeight="Bold" Height="45" 
                            BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <TextBlock Text="*Bloquea el acceso inmediatamente" Foreground="#555" FontSize="10" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">

            <Button Content="VOLVER AL HOME" Click="BtnCerrar_Click" Width="140" Height="40" 
                    Background="Transparent" Foreground="#888" BorderThickness="1" BorderBrush="#444" 
                    Margin="0,0,10,0" Cursor="Hand" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="REFRESCAR" Click="BtnRefrescar_Click" Width="120" Height="40" 
                    Background="#333" Foreground="White" BorderThickness="0" 
                    Margin="0,0,10,0" Cursor="Hand" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="📄 GENERAR LOGS" Click="BtnReporte_Click" Width="160" Height="40" 
                    Background="#9C27B0" Foreground="White" BorderThickness="0" 
                    Margin="0,0,10,0" Cursor="Hand" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect Color="#9C27B0" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                </Button.Effect>
            </Button>

            <Button Content="GUARDAR CAMBIOS" Click="BtnGuardar_Click" Width="200" Height="40" 
                    Background="#00E5FF" Foreground="#121212" FontWeight="ExtraBold" BorderThickness="0" Cursor="Hand" FontSize="13">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect Color="#00E5FF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>