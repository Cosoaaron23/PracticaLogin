<Window x:Class="PracticaLogin.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#121212">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#B71C1C">
            <StackPanel Margin="20">
                <TextBlock Text="AJUSTES" FontSize="30" Foreground="#00E5FF" FontWeight="Bold" Margin="0,0,0,40"/>

                <RadioButton Content="GENERAL" Style="{StaticResource MenuButton}" IsChecked="True"/>
                <RadioButton Content="GRÁFICOS" Style="{StaticResource MenuButton}"/>
                <RadioButton Content="SONIDO" Style="{StaticResource MenuButton}"/>
                <RadioButton Content="CUENTA" Style="{StaticResource MenuButton}"/>

                <Button Content="VOLVER" Click="BtnVolver_Click" VerticalAlignment="Bottom" Margin="0,250,0,0"
                        Background="#121212" Foreground="White" Height="40" BorderThickness="0" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Padding="40">
            <StackPanel>
                <TextBlock Text="Configuración General" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,30"/>

                <TextBlock Text="Idioma del Launcher" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                <ComboBox Height="35" Background="#1E1E1E" Foreground="Black" Margin="0,0,0,20" SelectedIndex="0">
                    <ComboBoxItem Content="Español (España)"/>
                    <ComboBoxItem Content="English (US)"/>
                </ComboBox>

                <TextBlock Text="Directorio de Juegos" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="C:\Games\AkayLibrary" Height="35" Background="#1E1E1E" Foreground="White" BorderBrush="#333333" VerticalContentAlignment="Center" Padding="5"/>
                    <Button Grid.Column="1" Content="..." Width="40" Background="#333333" Foreground="White" Margin="10,0,0,0"/>
                </Grid>

                <CheckBox Content="Iniciar AKAY al arrancar Windows" Foreground="White" Margin="0,0,0,15" IsChecked="True"/>
                <CheckBox Content="Minimizar a la bandeja del sistema" Foreground="White" Margin="0,0,0,15"/>
                <CheckBox Content="Mostrar FPS en el juego" Foreground="White" Margin="0,0,0,30" IsChecked="True"/>

                <Button Content="GUARDAR CAMBIOS" Height="45" Width="200" HorizontalAlignment="Left"
                        Background="#00E5FF" Foreground="#121212" FontWeight="Bold" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>
    </Grid>

    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="10,5">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#00E5FF"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Background" Value="#900000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>