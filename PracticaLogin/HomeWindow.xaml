<Window x:Class="PracticaLogin.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AKAY Launcher - Home" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        Icon="/Assets/logo.ico">

    <Window.Resources>
        <Style x:Key="TopMenuButton" TargetType="Button">
            <Setter Property="Background" Value="#E57373"/>
            <Setter Property="Foreground" Value="#00E5FF"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFCDD2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Background" Value="#B71C1C"/>
            <Setter Property="Foreground" Value="#00E5FF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#C62828" CornerRadius="0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GameCard" TargetType="Border">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="280"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#B71C1C">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Image Source="/Assets/logo.png" Height="60" RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                        </Image.Effect>
                    </Image>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="TIENDA" Click="BtnTienda_Click" Style="{StaticResource TopMenuButton}"/>
                    <Button Content="COMUNIDAD" Click="BtnComunidad_Click" Style="{StaticResource TopMenuButton}"/>
                    <Button Content="SOPORTE" Click="BtnComunidad_Click" Style="{StaticResource TopMenuButton}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,20,0">
                    <TextBlock Text="Mi Perfil" Foreground="#00E5FF" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button x:Name="btnLogout" Content="X" Click="BtnLogout_Click" 
                            Background="Transparent" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" ToolTip="Cerrar Sesión" FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Background="#B71C1C">
            <StackPanel VerticalAlignment="Center">
                <Button Content="DESTACADOS" Style="{StaticResource SideMenuButton}"/>
                <Button Content="MIS JUEGOS" Click="BtnMisJuegos_Click" Style="{StaticResource SideMenuButton}"/>
                <Button x:Name="btnConfiguracion" Content="CONFIGURACION" Click="BtnConfiguracion_Click" Style="{StaticResource SideMenuButton}"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel HorizontalAlignment="Center" Margin="20">

                <Border Style="{StaticResource GameCard}">
                    <Grid>
                        <Image Source="/Assets/juego1.jpg" Stretch="UniformToFill"/>
                        <Border Background="Black" VerticalAlignment="Bottom" Height="30" Opacity="0.8">
                            <TextBlock Text="INSTALADO" Foreground="#00E5FF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource GameCard}">
                    <Grid>
                        <Image Source="/Assets/juego2.jpg" Stretch="UniformToFill"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource GameCard}">
                    <Grid>
                        <Image Source="/Assets/juego3.jpg" Stretch="UniformToFill"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource GameCard}">
                    <Image Source="/Assets/juego4.jpg" Stretch="UniformToFill"/>
                </Border>

                <Border Style="{StaticResource GameCard}" BorderBrush="#FF4081" BorderThickness="3">
                    <Grid>
                        <Image Source="/Assets/juego7.jpg" Stretch="UniformToFill"/>
                        <Border Background="#FF4081" VerticalAlignment="Top" HorizontalAlignment="Right" Width="50" Height="25" CornerRadius="0,0,0,5">
                            <TextBlock Text="NEW" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource GameCard}">
                    <Image Source="/Assets/juego6.jpg" Stretch="UniformToFill"/>
                </Border>

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>