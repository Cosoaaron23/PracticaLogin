<Window x:Class="PracticaLogin.SubscriptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suscripciones" Height="550" Width="850"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#121212" Icon="/Assets/logo.ico"
        BorderBrush="#333" BorderThickness="1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ELIGE TU DESTINO" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Mejora tu experiencia en AKAY Launcher" FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0,2,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="BorderCielo" Grid.Column="0" Margin="8" Background="#1E1E1E" CornerRadius="10" BorderBrush="#4FC3F7" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#4FC3F7" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Margin="15">
                    <TextBlock Text="EL CIELO" FontSize="22" FontWeight="Bold" Foreground="#4FC3F7" HorizontalAlignment="Center"/>
                    <TextBlock Text="Para los puristas" FontSize="11" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,5,0,15"/>
                    <Border Height="1" Background="#333" Margin="0,0,0,15"/>
                    <TextBlock Text="0€" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="/ mes" FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <StackPanel>
                        <TextBlock Text="✔ Acceso a la tienda básica" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Sin modo multijugador" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Publicidad incluida" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Descargas estándar" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                    </StackPanel>

                    <Button x:Name="BtnCielo" Content="SELECCIONAR" Click="BtnCielo_Click" 
                            Background="Transparent" BorderBrush="#4FC3F7" BorderThickness="1" Foreground="#4FC3F7" 
                            Height="35" Margin="0,25,0,0" Cursor="Hand" FontWeight="Bold" FontSize="11"/>
                </StackPanel>
            </Border>

            <Border x:Name="BorderLimbo" Grid.Column="1" Margin="8" Background="#252525" CornerRadius="10" BorderBrush="#FF9800" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#FF9800" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel Margin="15">
                    <TextBlock Text="LIMBO" FontSize="22" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                    <TextBlock Text="Ni aquí ni allá" FontSize="11" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,5,0,15"/>
                    <Border Height="1" Background="#333" Margin="0,0,0,15"/>
                    <TextBlock Text="4.99€" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="/ mes" FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <StackPanel>
                        <TextBlock Text="✔ Todo lo del Cielo" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Sin Publicidad" Foreground="#FF9800" FontWeight="Bold" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Multijugador habilitado" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Descargas Rápidas" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                    </StackPanel>

                    <Button x:Name="BtnLimbo" Content="SELECCIONAR" Click="BtnLimbo_Click" 
                            Background="#FF9800" BorderThickness="0" Foreground="Black" 
                            Height="35" Margin="0,25,0,0" Cursor="Hand" FontWeight="Bold" FontSize="11">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <Border x:Name="BorderInfierno" Grid.Column="2" Margin="8" Background="#1E1E1E" CornerRadius="10" BorderBrush="#D32F2F" BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect Color="#D32F2F" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel Margin="15">
                    <TextBlock Text="EL INFIERNO" FontSize="24" FontWeight="ExtraBold" Foreground="#D32F2F" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#D32F2F" BlurRadius="8" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Poder absoluto" FontSize="11" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,5,0,15"/>
                    <Border Height="1" Background="#333" Margin="0,0,0,15"/>
                    <TextBlock Text="14.99€" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="/ mes" FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <StackPanel>
                        <TextBlock Text="✔ Todo lo del Limbo" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Acceso Anticipado" Foreground="#D32F2F" FontWeight="Bold" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Skins Exclusivas" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Descargas ULTRA" Foreground="#D32F2F" FontWeight="Bold" Margin="0,0,0,8" FontSize="11"/>
                        <TextBlock Text="✔ Soporte Prioritario 24/7" Foreground="White" Margin="0,0,0,8" FontSize="11"/>
                    </StackPanel>

                    <Button x:Name="BtnInfierno" Content="CONSEGUIR PODER" Click="BtnInfierno_Click" 
                            Background="#D32F2F" BorderThickness="0" Foreground="White" 
                            Height="35" Margin="0,5,0,0" Cursor="Hand" FontWeight="Bold" FontSize="11">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <Button Grid.Row="2" Content="VOLVER AL HOME" Click="BtnVolver_Click" 
                Width="180" Height="35" Background="Transparent" Foreground="White" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand" FontSize="12"/>
    </Grid>
</Window>