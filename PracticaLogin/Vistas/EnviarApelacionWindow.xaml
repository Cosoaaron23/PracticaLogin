<Window x:Class="PracticaLogin.EnviarApelacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enviar Apelación" Height="350" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent">

    <Border Background="#121212" BorderBrush="#FF4444" BorderThickness="1" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="SOLICITUD DE DESBANEO" Foreground="#FF4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Margin="0,20">
                <TextBlock Text="Usuario afectado:" Foreground="#888" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsuario" IsReadOnly="True" Background="#222" Foreground="White" BorderThickness="0" Padding="10" FontWeight="Bold"/>

                <TextBlock Text="Motivo de la apelación:" Foreground="#888" Margin="0,15,0,5"/>
                <TextBox x:Name="txtMensaje" Height="100" TextWrapping="Wrap" Background="#222" Foreground="White" BorderThickness="0" Padding="10" VerticalContentAlignment="Top"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="CANCELAR" Click="BtnCancelar_Click" Foreground="#888" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"/>
                <Button Content="ENVIAR SOLICITUD" Click="BtnEnviar_Click" Background="#FF4444" Foreground="White" FontWeight="Bold" Padding="15,8" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>