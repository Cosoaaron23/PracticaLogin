<Window x:Class="PracticaLogin.EnviarApelacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solicitud de Desbaneo" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#151515" BorderBrush="#FF4444" BorderThickness="1"
        MouseDown="Window_MouseDown">

    <Grid Margin="25">
        <StackPanel>
            <TextBlock Text="SOLICITUD DE DESBANEO" Foreground="#FF4444" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Tu Usuario:" Foreground="#888" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsuario" Height="35" Background="#222" Foreground="White" BorderBrush="#444" Padding="5" IsReadOnly="True" FontWeight="Bold"/>

            <TextBlock Text="Escribe tu mensaje al Administrador:" Foreground="#888" Margin="0,15,0,5"/>
            <TextBox x:Name="txtMensaje" Height="150" Background="#222" Foreground="White" BorderBrush="#444" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="CANCELAR" Click="BtnCerrar_Click" Width="100" Height="35" Background="Transparent" Foreground="#888" BorderThickness="1" Margin="0,0,10,0"/>
                <Button Content="ENVIAR SOLICITUD" Click="BtnEnviar_Click" Width="150" Height="35" Background="#FF4444" Foreground="White" BorderThickness="0" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>