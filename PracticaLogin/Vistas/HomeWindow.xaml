<Window x:Class="PracticaLogin.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AKAY Launcher - Home" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Maximized"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Assets/logo.ico">

    <Window.Resources>
        <Style x:Key="WindowControlBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="bdr" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseBtn" TargetType="Button" BasedOn="{StaticResource WindowControlBtn}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#DC3545"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="15,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0,0,0,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#00E5FF"/>
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#B71C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#33B71C1C"/>
                                <Setter Property="Foreground" Value="#00E5FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GameCard" TargetType="Border">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="280"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Background" Value="#CC121212"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#00E5FF"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00E5FF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PopupMenuItem" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#4000E5FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#121212" BorderBrush="#FF4444" BorderThickness="1">
        <Grid>
            <Grid>
                <Image x:Name="BackgroundImage" Source="/Assets/background.jpg" Stretch="UniformToFill" Opacity="0.5" RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.RenderTransform>
                        <TranslateTransform x:Name="BackgroundTranslateTransform"/>
                    </Image.RenderTransform>
                </Image>
                <Rectangle Fill="#88000000"/>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#E6050505" MouseDown="TopBar_MouseDown">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0">
                            <Image Source="/Assets/logo.ico" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="AKAY LAUNCHER" Foreground="#666666" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="—" Click="BtnMinimizar_Click" Style="{StaticResource WindowControlBtn}"/>
                            <Button x:Name="btnMaximizar" Content="◻" Click="BtnMaximizar_Click" Style="{StaticResource WindowControlBtn}"/>
                            <Button Content="✕" Click="BtnCerrarApp_Click" Style="{StaticResource CloseBtn}" Width="45"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="#333333" BorderThickness="0,1,0,1" Background="#66000000">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0">
                            <Image Source="/Assets/logo.png" Height="40" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Content="TIENDA" Click="BtnTienda_Click" Style="{StaticResource TopMenuButton}"/>
                            <Button Content="SUSCRIPCIONES" Click="BtnSuscripciones_Click" Style="{StaticResource TopMenuButton}"/>
                            <Button Content="COMUNIDAD" Click="BtnComunidad_Click" Style="{StaticResource TopMenuButton}"/>
                            <Button Content="SOPORTE" Click="BtnSoporte_Click" Style="{StaticResource TopMenuButton}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,0">
                            <Button x:Name="btnAdminPanel" Content="⚙ ADMIN" Click="BtnAdminPanel_Click" 
                                    Style="{StaticResource TopMenuButton}"
                                    Visibility="Collapsed"
                                    Foreground="#FF4444" 
                                    Margin="0,0,15,0"/>

                            <Border x:Name="UserProfileBorder" CornerRadius="20" BorderBrush="#00E5FF" BorderThickness="1" 
                                    Padding="10,5" Background="#44000000" Cursor="Hand" MouseLeftButtonUp="UserProfile_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="MainStatusIndicator" Width="12" Height="12" CornerRadius="6" Background="#23A559" Margin="0,0,10,0" BorderBrush="Black" BorderThickness="1"/>
                                    <TextBlock x:Name="lblNombreUsuario" Text="USUARIO" Foreground="#00E5FF" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="▼" Foreground="#888" FontSize="10" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Popup x:Name="UserMenuPopup" PlacementTarget="{Binding ElementName=UserProfileBorder}" 
                                   Placement="Bottom" VerticalOffset="-10" 
                                   StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                                <Border Background="#18191C" CornerRadius="5" BorderBrush="#202225" BorderThickness="1" Width="220">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
                                    </Border.Effect>

                                    <StackPanel Margin="0,5">
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnEstadoOnline_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="10" Height="10" CornerRadius="5" Background="#23A559" Margin="0,0,10,0"/>
                                                <TextBlock Text="Online"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnEstadoAusente_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="10" Height="10" CornerRadius="5" Background="#F0B232" Margin="0,0,10,0"/>
                                                <TextBlock Text="Ausente"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnEstadoInvisible_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="10" Height="10" CornerRadius="5" Background="#747F8D" Margin="0,0,10,0"/>
                                                <TextBlock Text="Invisible"/>
                                            </StackPanel>
                                        </Button>

                                        <Separator Background="#333" Margin="10,5"/>

                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnConfiguracion_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="⚙" Margin="0,0,10,0"/>
                                                <TextBlock Text="Ajustes de Cuenta"/>
                                            </StackPanel>
                                        </Button>

                                        <Separator Background="#333" Margin="10,5"/>

                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnLogout_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🚪" Margin="0,0,10,0" Foreground="#F04747"/>
                                                <TextBlock Text="Cerrar Sesión" Foreground="#F04747" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" Margin="20,20,0,20" CornerRadius="15" BorderBrush="#333333" BorderThickness="1" Background="#CC050505">
                    <StackPanel VerticalAlignment="Top" Margin="10,30,10,0">
                        <TextBlock Text="BIBLIOTECA" Foreground="#666666" FontSize="12" FontWeight="Bold" Margin="15,0,0,10"/>
                        <Button Content="DESTACADOS" Click="BtnDestacados_Click" Style="{StaticResource SideMenuButton}"/>
                        <Button Content="MIS JUEGOS" Click="BtnMisJuegos_Click" Style="{StaticResource SideMenuButton}"/>
                        <Separator Background="#333333" Margin="10,20"/>
                        <TextBlock Text="AKAY v1.0" Foreground="#444" HorizontalAlignment="Center" FontSize="10" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="2" Grid.Column="1" x:Name="MainScrollViewer" 
                              VerticalScrollBarVisibility="Auto" Margin="10,0,0,0"
                              ScrollChanged="MainScrollViewer_ScrollChanged">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,30,0,30">
                        <Border Style="{StaticResource GameCard}" MouseLeftButtonDown="Juego1_Click">
                            <Grid>
                                <Image Source="/Assets/juego1.jpg" Stretch="UniformToFill"/>
                                <Border Background="#CC000000" VerticalAlignment="Bottom" Height="35">
                                    <TextBlock Text="INSTALADO" Foreground="#00E5FF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource GameCard}" MouseLeftButtonDown="Juego2_Click">
                            <Image Source="/Assets/juego2.jpg" Stretch="UniformToFill"/>
                        </Border>

                        <Border Style="{StaticResource GameCard}" MouseLeftButtonDown="Juego3_Click">
                            <Image Source="/Assets/juego3.jpg" Stretch="UniformToFill"/>
                        </Border>

                        <Border Style="{StaticResource GameCard}" MouseLeftButtonDown="Juego4_Click">
                            <Image Source="/Assets/juego4.jpg" Stretch="UniformToFill"/>
                        </Border>

                        <Border Style="{StaticResource GameCard}" BorderBrush="#FF4081" BorderThickness="2" MouseLeftButtonDown="Juego5_Click">
                            <Grid>
                                <Image Source="/Assets/juego7.jpg" Stretch="UniformToFill"/>
                                <Border Background="#FF4081" VerticalAlignment="Top" HorizontalAlignment="Right" Width="50" Height="25" CornerRadius="0,0,0,8">
                                    <TextBlock Text="NEW" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                                </Border>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource GameCard}" MouseLeftButtonDown="Juego6_Click">
                            <Image Source="/Assets/juego6.jpg" Stretch="UniformToFill"/>
                        </Border>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>

            <Border x:Name="DimmerOverlay" Background="#AA000000" Visibility="Collapsed" IsHitTestVisible="False"/>

        </Grid>
    </Border>
</Window>