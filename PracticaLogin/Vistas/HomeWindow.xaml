<Window x:Class="PracticaLogin.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AKAY Launcher - Home" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Maximized"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Assets/logo.ico"
        Loaded="Window_Loaded">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="CyberComboItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#181818"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#00E5FF"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="#00E5FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="CyberComboBoxTemplate" TargetType="ComboBox">
            <Grid>
                <ToggleButton Name="ToggleButton" 
                      BorderBrush="{TemplateBinding BorderBrush}" 
                      Background="{TemplateBinding Background}" 
                      Foreground="{TemplateBinding Foreground}"
                      Focusable="false" 
                      ClickMode="Press"
                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>
                                    <Path Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                  Fill="#00E5FF" Data="M 0 0 L 4 4 L 8 0 Z" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  
                          Content="{TemplateBinding SelectionBoxItem}"
                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                          Margin="15,0,30,0" VerticalAlignment="Center" HorizontalAlignment="Left" />

                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                    <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                        <Border x:Name="DropDownBorder" Background="#181818" BorderThickness="1" BorderBrush="#333" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.5"/>
                            </Border.Effect>
                        </Border>
                        <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                        </ScrollViewer>
                    </Grid>
                </Popup>
            </Grid>
        </ControlTemplate>

        <Style x:Key="CyberComboBox" TargetType="ComboBox">
            <Setter Property="Template" Value="{StaticResource CyberComboBoxTemplate}"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource CyberComboItem}"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <Style x:Key="CloseBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#F04747"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlBtn" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,25,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="5" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="12" Margin="12,2">
                            <Grid>
                                <Border x:Name="indicator" Width="4" HorizontalAlignment="Left" Background="Transparent" CornerRadius="2" Height="20" Margin="8,0,0,0"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#1AFFFFFF"/>
                                <Setter TargetName="indicator" Property="Background" Value="#00E5FF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00E5FF" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PopupMenuItem" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#B9BBBE"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#5865F2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GameCard" TargetType="Border">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="260"/>
            <Setter Property="Background" Value="#181818"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#00E5FF"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HamburgerBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#00E5FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#121212" BorderBrush="#FF4444" BorderThickness="1">
        <Grid>
            <Grid>
                <Image x:Name="BackgroundImage" Source="/Assets/background.jpg" Stretch="UniformToFill" Opacity="0.5" RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.RenderTransform>
                        <TranslateTransform x:Name="BackgroundTranslateTransform"/>
                    </Image.RenderTransform>
                </Image>
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                            <GradientStop Color="#99000000" Offset="0"/>
                            <GradientStop Color="#FF050505" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#E6050505" MouseDown="TopBar_MouseDown">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0">
                            <Image Source="/Assets/logo.ico" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="AKAY LAUNCHER" Foreground="#888" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="—" Click="BtnMinimizar_Click" Style="{StaticResource WindowControlBtn}"/>
                            <Button x:Name="btnMaximizar" Content="◻" Click="BtnMaximizar_Click" Style="{StaticResource WindowControlBtn}"/>
                            <Button Content="✕" Click="BtnCerrarApp_Click" Style="{StaticResource CloseBtn}" Width="45"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="#333333" BorderThickness="0,1,0,1" Background="#CC050505">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                            <Button x:Name="btnMenu" Content="☰" Click="BtnMenu_Click" Style="{StaticResource HamburgerBtn}" Margin="0,0,20,0"/>
                            <Image Source="/Assets/logo.png" Height="40" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Content="SUSCRIPCIONES" Click="BtnSuscripciones_Click" Style="{StaticResource TopMenuButton}"/>
                            <Button Content="COMUNIDAD" Click="BtnComunidad_Click" Style="{StaticResource TopMenuButton}"/>
                            <Button Content="SOPORTE" Click="BtnSoporte_Click" Style="{StaticResource TopMenuButton}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,0">
                            <Button Content="🛒 CARRITO" Click="BtnVerCarrito_Click" Style="{StaticResource TopMenuButton}" Foreground="#00FF00" Margin="0,0,15,0"/>
                            <Button x:Name="btnAdminPanel" Content="⚙ ADMIN" Click="BtnAdminPanel_Click" Style="{StaticResource TopMenuButton}" Visibility="Collapsed" Foreground="#FF4444" Margin="0,0,15,0"/>

                            <Border x:Name="UserProfileBorder" CornerRadius="20" BorderBrush="#00E5FF" BorderThickness="1" Padding="10,5" Background="#44000000" Cursor="Hand" MouseLeftButtonUp="UserProfile_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="MainStatusIndicator" Width="12" Height="12" CornerRadius="6" Background="#23A559" Margin="0,0,10,0" BorderBrush="Black" BorderThickness="1"/>
                                    <TextBlock x:Name="lblNombreUsuario" Text="USUARIO" Foreground="#00E5FF" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="▼" Foreground="#888" FontSize="10" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Popup x:Name="UserMenuPopup" PlacementTarget="{Binding ElementName=UserProfileBorder}" Placement="Bottom" VerticalOffset="-10" StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                                <Border Background="#18191C" CornerRadius="5" BorderBrush="#202225" BorderThickness="1" Width="220">
                                    <StackPanel Margin="0,5">
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnEstadoOnline_Click" Content="🟢 Online"/>
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnEstadoAusente_Click" Content="🟡 Ausente"/>
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnEstadoInvisible_Click" Content="⚪ Invisible"/>
                                        <Separator Background="#333" Margin="10,5"/>
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnConfiguracion_Click" Content="⚙ Ajustes"/>
                                        <Separator Background="#333" Margin="10,5"/>
                                        <Button Style="{StaticResource PopupMenuItem}" Click="BtnLogout_Click" Content="🚪 Cerrar Sesión" Foreground="#F04747"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" x:Name="SideMenuBorder" Width="250"
        Margin="20,20,0,20" CornerRadius="18" BorderBrush="#333" BorderThickness="1" ClipToBounds="True">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#E6050505" Offset="0"/>
                            <GradientStop Color="#E6121212" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <TextBlock x:Name="lblTituloSeccion" Text="NAVEGACIÓN" Foreground="#444" FontSize="10" 
                   FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="0,30,0,0"/>

                        <StackPanel VerticalAlignment="Center">
                            <Button Click="BtnDestacados_Click" Style="{StaticResource SideMenuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔥" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="DESTACADOS" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Click="BtnTienda_Click" Style="{StaticResource SideMenuButton}" Margin="0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🛍️" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="TIENDA" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Click="BtnMisJuegos_Click" Style="{StaticResource SideMenuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🎮" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="BIBLIOTECA" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,25" Opacity="0.4">
                            <TextBlock Text="AKAY LAUNCHER" Foreground="#AAA" FontWeight="Bold" HorizontalAlignment="Center" FontSize="9"/>
                            <TextBlock Text="v2.0.1 Stable" Foreground="#888" HorizontalAlignment="Center" FontSize="8" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="2" Grid.Column="1" x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" Margin="10,0,0,0" ScrollChanged="MainScrollViewer_ScrollChanged">
                    <StackPanel Margin="0,20,20,30">

                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#222" CornerRadius="8" Height="45" Margin="0,0,20,0" BorderBrush="#333" BorderThickness="1">
                                <Grid>
                                    <TextBlock Text="🔍 Buscar juego..." Foreground="#666" VerticalAlignment="Center" Margin="15,0,0,0" IsHitTestVisible="False" FontSize="14"/>
                                    <TextBox x:Name="txtBusqueda" Background="Transparent" Foreground="White" BorderThickness="0" 
                                             VerticalContentAlignment="Center" Padding="10,0" FontSize="14"
                                             TextChanged="TxtBusqueda_TextChanged"/>
                                </Grid>
                            </Border>

                            <ComboBox x:Name="cmbFiltro" Grid.Column="1" Width="180" 
          Style="{StaticResource CyberComboBox}"
          SelectionChanged="CmbFiltro_SelectionChanged">
                                <ComboBoxItem Content="Todos" IsSelected="True"/>
                                <ComboBoxItem Content="Acción"/>
                                <ComboBoxItem Content="Aventura"/>
                                <ComboBoxItem Content="RPG"/>
                                <ComboBoxItem Content="Deportes"/>
                                <ComboBoxItem Content="Estrategia"/>
                            </ComboBox>
                        </Grid>

                        <Border Height="300" CornerRadius="12" Margin="0,0,0,20" ClipToBounds="True" Background="#050505" BorderBrush="#333" BorderThickness="1">
                            <Grid>
                                <Image x:Name="imgBanner" Stretch="Fill"/>
                                <Border VerticalAlignment="Bottom" Height="150">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="#E6000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <StackPanel VerticalAlignment="Bottom" Margin="30">
                                    <Border Background="#B71C1C" HorizontalAlignment="Left" CornerRadius="4" Padding="10,4" Margin="0,0,0,10">
                                        <TextBlock Text="🔥 JUEGO DESTACADO" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                    </Border>
                                    <TextBlock x:Name="lblBannerTitulo" Text="CARGANDO..." Foreground="White" FontWeight="Bold" FontSize="40">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3"/>
                                        </TextBlock.Effect></TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <ItemsControl x:Name="listaJuegos">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource GameCard}" Tag="{Binding Id}" MouseLeftButtonDown="JuegoDinamico_Click">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="65"/>
                                            </Grid.RowDefinitions>

                                            <Image Source="{Binding ImagenAbsoluta}" Stretch="UniformToFill"/>

                                            <Border Background="#FF4081" VerticalAlignment="Top" HorizontalAlignment="Right" 
                    Width="50" Height="20" CornerRadius="0,0,0,8" 
                    Visibility="{Binding EsOnline, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="ONLINE" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9"/>
                                            </Border>

                                            <Border Grid.Row="1" Background="#E6050505" BorderBrush="#333" BorderThickness="0,1,0,0" Padding="12,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0">
                                                        <TextBlock Text="{Binding Titulo}" Foreground="White" FontWeight="Bold" FontSize="13" 
                                   TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" 
                                   ToolTip="{Binding Titulo}"/>
                                                        <TextBlock Text="{Binding Genero}" Foreground="#888" FontSize="11" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" Text="{Binding Precio, StringFormat={}{0:C}}" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" 
                               Foreground="#00FF00" FontWeight="Bold" FontSize="15"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <Border x:Name="DimmerOverlay" Background="#AA000000" Visibility="Collapsed" IsHitTestVisible="False"/>
        </Grid>
    </Border>
</Window>