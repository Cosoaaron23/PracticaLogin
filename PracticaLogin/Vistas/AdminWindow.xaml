<Window x:Class="PracticaLogin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Control - AKAY" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#181818" BorderBrush="#00E5FF" BorderThickness="2"
        MouseDown="Window_MouseDown" Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.Resources>
            <Style x:Key="BtnMenu" TargetType="Button">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="35"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#222" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🛡️ AKAY ADMIN" Foreground="#00E5FF" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <Border Background="#333" CornerRadius="15" Padding="10,0" Width="300" Height="35">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" Foreground="#AAA" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtBusqueda" Width="260" Background="Transparent" Foreground="White" BorderThickness="0" 
                                     VerticalContentAlignment="Center" TextChanged="TxtBusqueda_TextChanged"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Refrescar" Click="BtnRefrescar_Click" Style="{StaticResource BtnMenu}" Background="#333"/>
                    <Button Content="+ Usuario" Click="BtnCrearUser_Click" Style="{StaticResource BtnMenu}" Background="#333"/>
                    <Button Content="Apelaciones" Click="BtnApelaciones_Click" Style="{StaticResource BtnMenu}" Background="#333"/>
                    <Button Content="Reporte" Click="BtnReporte_Click" Style="{StaticResource BtnMenu}" Background="#333"/>
                    <Button Content="Salir" Click="BtnCerrar_Click" Style="{StaticResource BtnMenu}" Background="#990000" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid x:Name="dgUsuarios" Grid.Row="1" Background="#1E1E1E" RowBackground="#252525" AlternatingRowBackground="#202020"
                  Foreground="White" BorderThickness="0" HeadersVisibility="Column" AutoGenerateColumns="False" 
                  CanUserAddRows="False" GridLinesVisibility="None" SelectionChanged="DgUsuarios_SelectionChanged">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#00E5FF"/>
                    <Setter Property="Foreground" Value="#111"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#334455"/>
                            <Setter Property="Foreground" Value="#00E5FF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding Username}" Width="*" FontWeight="Bold" IsReadOnly="True"/>
                <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="180"/>
                <DataGridTextColumn Header="ROL" Binding="{Binding Rol}" Width="80"/>
                <DataGridTextColumn Header="PASS" Binding="{Binding Password}" Width="100"/>
                <DataGridCheckBoxColumn Header="ACTIVO" Binding="{Binding Activo}" Width="70" IsReadOnly="True"/>
                <DataGridTextColumn Header="NIVEL BAN" Binding="{Binding GradoBaneo}" Width="90" IsReadOnly="True"/>

                <DataGridTextColumn Header="EXPIRA EL" 
                                    Binding="{Binding FinBaneo, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                    Width="160" IsReadOnly="True" Foreground="#FF5555" FontWeight="Bold"/>

                <DataGridTextColumn Header="PLAN" Binding="{Binding Suscripcion}" Width="80" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Background="#222" CornerRadius="8" Padding="15" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="USUARIO SELECCIONADO:" Foreground="#888" FontSize="10"/>
                    <TextBlock x:Name="lblSelectedUser" Text="Ninguno" Foreground="White" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <PasswordBox x:Name="txtNuevaPass" Width="150" Height="30" Margin="0,0,10,0" Background="#333" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="btnCambiarPass" Content="Cambiar Contraseña" Click="BtnCambiarPass_Click" Width="140" Height="30" Background="#444" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="btnGuardar" Content="💾 Guardar Cambios Tabla" Click="BtnGuardar_Click" Width="160" Height="30" Margin="10,0,0,0" Background="#007ACC" Foreground="White" BorderThickness="0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <ComboBox x:Name="cmbGravedad" Width="140" Height="30" Margin="0,0,5,0" SelectedIndex="0">
                            <ComboBoxItem Content="1 Día (Leve)"/>
                            <ComboBoxItem Content="3 Días (Medio)"/>
                            <ComboBoxItem Content="1 Semana (Grave)"/>
                            <ComboBoxItem Content="1 Mes (Muy Grave)"/>
                            <ComboBoxItem Content="Permanente"/>
                        </ComboBox>
                        <Button x:Name="btnAplicarSancion" Content="APLICAR SANCIÓN" Click="BtnAplicarSancion_Click" Width="120" Height="30" Background="#333" Foreground="Gray" FontWeight="Bold" BorderThickness="0" IsEnabled="False"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnEliminarUser" Content="🗑 ELIMINAR" Click="BtnEliminarUser_Click" Width="100" Height="25" Background="#550000" Foreground="White" BorderThickness="0" Margin="0,0,5,0" IsEnabled="False"/>
                        <Button x:Name="btnLevantarCastigo" Content="🟢 INDULTAR" Click="BtnLevantarCastigo_Click" Width="100" Height="25" Background="#005500" Foreground="White" BorderThickness="0" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>