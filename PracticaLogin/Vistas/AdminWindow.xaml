<Window x:Class="PracticaLogin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administración" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="#121212" BorderBrush="#FFD700" BorderThickness="2"
        MouseDown="Window_MouseDown">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="PANEL DE CONTROL" Foreground="#FFD700" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Selecciona una herramienta" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <Button x:Name="btnJuegos" Content="🎮 GESTIONAR JUEGOS" Click="BtnJuegos_Click" 
                    Height="50" Margin="0,0,0,15" Background="#333" Foreground="White" 
                    FontSize="14" FontWeight="Bold" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnUsuarios" Content="👥 GESTIONAR USUARIOS" Click="BtnUsuarios_Click" 
                    Height="50" Margin="0,0,0,15" Background="#333" Foreground="White" 
                    FontSize="14" FontWeight="Bold" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnSoporte" Content="🎫 GESTIONAR SOPORTE" Click="BtnSoporte_Click" 
                    Height="50" Margin="0,0,0,15" Background="#333" Foreground="White" 
                    FontSize="14" FontWeight="Bold" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnReportes" Content="📋 VER REPORTES LOGS" Click="BtnReportes_Click" 
                    Height="50" Margin="0,0,0,15" Background="#222" Foreground="Gray" 
                    FontSize="14" FontWeight="Bold" Cursor="Hand" BorderBrush="#444" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>

        <Button Grid.Row="2" Content="CERRAR SESIÓN ADMIN" Click="BtnCerrar_Click" 
                Background="Transparent" Foreground="#FF4444" BorderThickness="0" Cursor="Hand"/>
    </Grid>
</Window>