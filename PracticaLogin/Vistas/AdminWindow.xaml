<Window x:Class="PracticaLogin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administración" Height="700" Width="1350"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#121212" BorderBrush="#00E5FF" BorderThickness="1"
        Loaded="Window_Loaded" MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="RowBackground" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#444"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#00E5FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3300E5FF"/>
                    <Setter Property="Foreground" Value="#00E5FF"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="PANEL DE ADMINISTRACIÓN" Foreground="#00E5FF" FontSize="28" FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00E5FF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Gestión integral: Usuarios, Roles, Contraseñas y Sanciones" Foreground="#888" FontSize="14" Margin="2,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                <TextBlock Text="🔍" Foreground="#888" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16"/>
                <TextBox x:Name="txtBusqueda" Width="250" Height="35" Background="#1E1E1E" Foreground="White" 
                         BorderBrush="#444" VerticalContentAlignment="Center" Padding="10,0"
                         TextChanged="TxtBusqueda_TextChanged" FontSize="14" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="dgUsuarios" Grid.Column="0" Margin="0,0,25,0" SelectionChanged="DgUsuarios_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}"/>

                    <DataGridTextColumn Header="USUARIO" Binding="{Binding Username}" Width="*" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}"/>

                    <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="1.2*" ElementStyle="{StaticResource CenteredCell}"/>

                    <DataGridTextColumn Header="CONTRASEÑA" Binding="{Binding Password}" Width="110" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCell}">
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="ROL" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Rol}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox Text="{Binding Rol}" IsEditable="True" HorizontalContentAlignment="Center">
                                    <ComboBoxItem Content="USER"/>
                                    <ComboBoxItem Content="ADMIN"/>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="GRADO" Binding="{Binding GradoBaneo}" Width="60" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}"/>

                    <DataGridTextColumn Header="TIEMPO RESTANTE" Binding="{Binding TiempoRestante}" Width="140" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCell}">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="∞ PERMANENTE">
                                        <Setter Property="Foreground" Value="#FF4444"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="ESTADO" Binding="{Binding EstadoLegible}" Width="80" IsReadOnly="True" ElementStyle="{StaticResource CenteredCell}"/>
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
                <StackPanel Margin="20">
                    <TextBlock Text="PANEL DE CONTROL" Foreground="#00E5FF" FontWeight="Bold" FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="lblSelectedUser" Text="Selecciona un usuario" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <TextBlock Text="Rol:" Foreground="#888" FontSize="11" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="cmbRol" Height="30" Margin="0,0,0,10" Background="#252525" Foreground="Black" HorizontalContentAlignment="Center">
                        <ComboBoxItem Content="USER"/>
                        <ComboBoxItem Content="ADMIN"/>
                    </ComboBox>

                    <TextBlock Text="Contraseña:" Foreground="#888" FontSize="11" HorizontalAlignment="Center"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="txtNuevaPass" Height="30" Background="#252525" Foreground="White" BorderBrush="#444" Margin="0,0,5,0" HorizontalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="SET" Click="BtnCambiarPass_Click" Width="50" Background="#333" Foreground="White" BorderThickness="0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Separator Background="#333" Margin="0,0,0,15"/>

                    <TextBlock Text="GESTIÓN DE SANCIONES" Foreground="#FF4444" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbGravedad" Height="35" Margin="0,0,0,10" Background="#252525" Foreground="Black" HorizontalContentAlignment="Center">
                        <ComboBoxItem Content="Grado 1 (1 Día)"/>
                        <ComboBoxItem Content="Grado 2 (3 Días)"/>
                        <ComboBoxItem Content="Grado 3 (1 Semana)"/>
                        <ComboBoxItem Content="Grado 4 (1 Mes)"/>
                        <ComboBoxItem Content="Grado 5 (PERMANENTE)"/>
                    </ComboBox>

                    <Button x:Name="btnAplicarSancion" Content="APLICAR SANCIÓN" Click="BtnAplicarSancion_Click" 
                            IsEnabled="False" Background="#333" Foreground="#888" FontWeight="Bold" Height="40" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="btnLevantarCastigo" Content="🟢 LEVANTAR CASTIGO" Click="BtnLevantarCastigo_Click" 
                            Visibility="Collapsed" Background="#1B5E20" Foreground="White" FontWeight="Bold" Height="40" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="VOLVER" Click="BtnCerrar_Click" Width="100" Height="40" Background="Transparent" Foreground="#888" BorderThickness="1" BorderBrush="#444" Margin="0,0,10,0"/>
            <Button Content="REFRESCAR" Click="BtnRefrescar_Click" Width="100" Height="40" Background="#333" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>

            <Button Content="📩 APELACIONES" Click="BtnApelaciones_Click" Width="140" Height="40" Background="#E65100" Foreground="White" BorderThickness="0" Margin="0,0,10,0" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="📄 LOGS" Click="BtnReporte_Click" Width="100" Height="40" Background="#9C27B0" Foreground="White" BorderThickness="0" Margin="0,0,10,0" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="GUARDAR CAMBIOS" Click="BtnGuardar_Click" Width="180" Height="40" Background="#00E5FF" Foreground="#121212" FontWeight="ExtraBold" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>