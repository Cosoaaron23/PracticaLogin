<Window x:Class="PracticaLogin.CarritoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi Carrito" Height="500" Width="410"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#121212" BorderBrush="#00E5FF" BorderThickness="2" CornerRadius="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="🛒 TU CARRITO" Foreground="#00E5FF" FontSize="20" FontWeight="Bold"/>
                <Button Content="✕" Click="BtnCerrar_Click" HorizontalAlignment="Right" Margin="210,0,0,0"
                        Background="Transparent" Foreground="White" BorderThickness="0" FontSize="18" Cursor="Hand"/>
            </StackPanel>

            <ListBox x:Name="lstProductos" Grid.Row="1" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E1E" CornerRadius="5" Margin="0,0,0,10" Padding="10" Width="340">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{Binding ImagenAbsoluta}" Stretch="UniformToFill" Width="50" Height="50"/>

                                <StackPanel Grid.Column="1" Margin="10,0">
                                    <TextBlock Text="{Binding Titulo}" Foreground="White" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Genero}" Foreground="Gray" FontSize="10"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="{Binding Precio, StringFormat={}{0}€}" Foreground="#00FF00" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

                                <Button Grid.Column="3" Content="🗑" Click="BtnEliminarItem_Click" Tag="{Binding}"
                                        Background="Transparent" Foreground="#FF4444" BorderThickness="0" Cursor="Hand"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15">
                <TextBlock Text="TOTAL:" Foreground="White" FontSize="16"/>
                <TextBlock x:Name="lblTotal" Text="0.00€" Foreground="#00FF00" FontSize="18" FontWeight="Bold" Margin="10,0,0,0"/>
            </StackPanel>

            <Button Grid.Row="3" Content="FINALIZAR COMPRA" Click="BtnPagar_Click"
                    Background="#23A559" Foreground="White" FontWeight="Bold" Height="40"
                    BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>