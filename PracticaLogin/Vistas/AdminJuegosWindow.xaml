<Window x:Class="PracticaLogin.AdminJuegosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administración - Juegos" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00E5FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00E5FF" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#0D0D0D" BorderBrush="#00E5FF" BorderThickness="1" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="10" Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="10,0,0,10" BorderBrush="#333" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="25,25,25,10">
                        <TextBlock Text="ADMINISTRAR JUEGOS" Foreground="#00E5FF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00E5FF" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Separator Background="#333" Margin="0,15"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                        <StackPanel Margin="25,0,25,20">

                            <TextBlock Text="TÍTULO DEL JUEGO" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtTitulo" Margin="0,0,0,15"/>

                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="PRECIO (€)" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtPrecio"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="TAMAÑO (GB)" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtGigas"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="GÉNERO" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbGenero" Height="35" Margin="0,0,0,15">
                                <ComboBoxItem Content="Acción"/>
                                <ComboBoxItem Content="Aventura"/>
                                <ComboBoxItem Content="RPG"/>
                                <ComboBoxItem Content="Shooter"/>
                                <ComboBoxItem Content="Deportes"/>
                                <ComboBoxItem Content="Estrategia"/>
                                <ComboBoxItem Content="Terror"/>
                                <ComboBoxItem Content="MOBA"/>
                                <ComboBoxItem Content="Battle Royale"/>
                            </ComboBox>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="0,0,10,0">
                                    <TextBlock Text="Nº JUGADORES" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtJugadores"/>
                                </StackPanel>
                                <CheckBox x:Name="chkOnline" Content="Juego Online" Grid.Column="1" VerticalAlignment="Bottom" Margin="10,0,0,5" Foreground="White" FontSize="14" Cursor="Hand">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </Grid>

                            <Border Background="#252525" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="GESTIÓN DE IMÁGENES" Foreground="#00E5FF" FontWeight="Bold" FontSize="12" Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <Border Height="120" Background="#111" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="0,0,0,5">
                                                <Image x:Name="imgPreviewPortada" Stretch="Uniform"/>
                                            </Border>
                                            <Button Content="📁 PORTADA (V)" Click="BtnSeleccionarImagen_Click" Style="{StaticResource ModernButton}" Background="#333" Height="30" BorderBrush="#555" BorderThickness="1"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <Border Height="120" Background="#111" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="0,0,0,5">
                                                <Image x:Name="imgPreviewFondo" Stretch="Uniform"/>
                                            </Border>
                                            <Button Content="🖼 BANNER (H)" Click="BtnSeleccionarFondo_Click" Style="{StaticResource ModernButton}" Background="#333" Height="30" BorderBrush="#555" BorderThickness="1"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Button x:Name="btnCrear" Content="💾 GUARDAR NUEVO JUEGO" Click="BtnCrear_Click" Style="{StaticResource ModernButton}" Background="#007ACC" Height="45" Margin="0,0,0,10"/>

                            <Button x:Name="btnActualizar" Content="🔄 ACTUALIZAR DATOS" Click="BtnGuardar_Click" Style="{StaticResource ModernButton}" Background="#FFA500" Foreground="Black" Height="45" Margin="0,0,0,10" Visibility="Collapsed"/>

                            <Button Content="LIMPIAR FORMULARIO" Click="BtnLimpiar_Click" Style="{StaticResource ModernButton}" Background="Transparent" Foreground="#666" BorderThickness="0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="LISTA DE JUEGOS" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Content="✕" Click="BtnCerrar_Click" HorizontalAlignment="Right" Style="{StaticResource ModernButton}" Background="#333" Width="30" Height="30"/>
                </Grid>

                <DataGrid x:Name="dgJuegos" Grid.Row="1" Margin="0,20" 
                          Background="Transparent" BorderThickness="0"
                          RowBackground="#1A1A1A" AlternatingRowBackground="#222"
                          Foreground="#CCC" GridLinesVisibility="None"
                          HeadersVisibility="Column" AutoGenerateColumns="False" 
                          IsReadOnly="True" SelectionChanged="DgJuegos_SelectionChanged"
                          SelectionMode="Single" SelectionUnit="FullRow">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#3300E5FF"/>
                                    <Setter Property="Foreground" Value="#00E5FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="TÍTULO" Binding="{Binding Titulo}" Width="*"/>
                        <DataGridTextColumn Header="PRECIO" Binding="{Binding Precio, StringFormat=C}" Width="90"/>
                        <DataGridTextColumn Header="GÉNERO" Binding="{Binding Genero}" Width="100"/>
                        <DataGridTextColumn Header="ONLINE" Binding="{Binding TipoConexion}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="🗑 ELIMINAR SELECCIONADO" Click="BtnEliminar_Click" Grid.Row="2" 
                        Style="{StaticResource ModernButton}" Background="#B71C1C" Height="40" Width="220" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Border>
</Window>