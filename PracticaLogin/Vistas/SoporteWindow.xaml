<Window x:Class="PracticaLogin.SoporteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Soporte Técnico" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="#121212" BorderBrush="#B71C1C" BorderThickness="1"
        MouseDown="Window_MouseDown">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="CENTRO DE AYUDA" Foreground="#B71C1C" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="¿En qué podemos ayudarte hoy?" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,20"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Motivo de la consulta:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbMotivo" Height="35" Background="#222" Foreground="White" BorderBrush="#444" Padding="10,8">
                <ComboBoxItem Content="Problema con un pago"/>
                <ComboBoxItem Content="El juego no se instala"/>
                <ComboBoxItem Content="Reportar un bug"/>
                <ComboBoxItem Content="Recuperar cuenta"/>
                <ComboBoxItem Content="Otro"/>
            </ComboBox>

            <TextBlock Text="Detalles del problema:" Foreground="White" Margin="0,15,0,5"/>
            <TextBox x:Name="txtMensaje" Height="120" Background="#222" Foreground="White" BorderBrush="#444" 
                     TextWrapping="Wrap" AcceptsReturn="True" Padding="5" VerticalContentAlignment="Top"/>

            <CheckBox Content="Enviar logs de error adjuntos" Foreground="Gray" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Button Content="ENVIAR TICKET" Click="BtnEnviar_Click" Height="40" Background="#B71C1C" Foreground="White" FontWeight="Bold" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="CANCELAR" Click="BtnCerrar_Click" Margin="0,10,0,0" Background="Transparent" Foreground="Gray" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>