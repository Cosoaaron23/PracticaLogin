<Window x:Class="PracticaLogin.SubVentana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SubVentana" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        ResizeMode="NoResize"
        Icon="/Assets/logo.ico"
        Background="#121212">

    <Grid>
        <Border BorderBrush="#B71C1C" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Assets/logo.png" Height="50" Margin="0,0,15,0"/>
                    <TextBlock x:Name="lblTitulo" Text="TÍTULO SECCIÓN" FontSize="36" FontWeight="Bold" Foreground="#00E5FF">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00E5FF" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <Border Grid.Row="1" Margin="50,20" Background="#1E1E1E" CornerRadius="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🚧" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Esta sección está en construcción" FontSize="24" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Próximamente disponible en la versión 2.0" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Button Grid.Row="2" Content="VOLVER AL HOME" Click="BtnVolver_Click" 
                        Width="200" Height="40" Background="#B71C1C" Foreground="White" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>