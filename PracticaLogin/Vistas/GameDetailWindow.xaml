<Window x:Class="PracticaLogin.GameDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles del Juego" Height="550" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#121212"
        Icon="/Assets/logo.ico"
        BorderBrush="#00E5FF"
        BorderThickness="2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Margin="20" BorderBrush="#333" BorderThickness="1" Background="Black">
            <Image x:Name="imgPortada" Stretch="Uniform"/>
        </Border>

        <StackPanel Grid.Column="1" Margin="20,40,30,0">
            <TextBlock x:Name="lblTitulo" FontSize="36" FontWeight="Bold" Foreground="#00E5FF" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="GÉNERO" Foreground="#888" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="lblGenero" Foreground="White" FontSize="14"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right">
                    <TextBlock Text="ESPACIO" Foreground="#888" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="lblGigas" Foreground="White" FontSize="14" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>

            <Separator Background="#333" Margin="0,10"/>

            <TextBlock Text="DESCRIPCIÓN" Foreground="#B71C1C" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock x:Name="txtDescripcion" Foreground="#CCC" TextWrapping="Wrap" FontSize="14" LineHeight="20"/>

            <StackPanel x:Name="panelDescarga" Visibility="Collapsed" Margin="0,30,0,0">
                <Grid Margin="0,0,0,5">
                    <TextBlock x:Name="lblPorcentaje" Text="Preparando descarga..." Foreground="#00E5FF" FontWeight="Bold"/>
                    <TextBlock x:Name="lblVelocidad" Text="0 MB/s" Foreground="#666" HorizontalAlignment="Right"/>
                </Grid>
                <ProgressBar x:Name="pbDescarga" Height="8" Background="#111" Foreground="#00E5FF" BorderThickness="0"/>
            </StackPanel>

            <Grid Margin="0,40,0,0">
                <Button x:Name="btnCarrito" Content="🛒 AÑADIR AL CARRITO" Click="BtnCarrito_Click" 
                        Height="45" Width="240" HorizontalAlignment="Left" Background="#00E5FF" Foreground="Black" FontWeight="Bold" Visibility="Collapsed">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnInstalar" Content="⬇ INSTALAR JUEGO" Click="BtnInstalar_Click" 
                        Height="45" Width="240" HorizontalAlignment="Left" Background="#B71C1C" Foreground="White" FontWeight="Bold" Visibility="Collapsed">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnJugar" Content="▶ INICIAR JUEGO" Click="BtnJugar_Click" 
                        Height="45" Width="240" HorizontalAlignment="Left" Background="#23A559" Foreground="White" FontWeight="Bold" Visibility="Collapsed">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>

        <Button Grid.Row="1" Grid.ColumnSpan="2" Content="VOLVER" Click="BtnCerrar_Click"
                Background="#1E1E1E" Foreground="Gray" BorderThickness="0,1,0,0" BorderBrush="#333" FontWeight="Bold"/>
    </Grid>
</Window>