<Window x:Class="PracticaLogin.AdminUsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión Avanzada de Usuarios" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="#121212" BorderBrush="#FFD700" BorderThickness="2"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#00E5FF"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3300E5FF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#00E5FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ADMINISTRACIÓN DE USUARIOS" Foreground="#FFD700" FontSize="22" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid x:Name="dgUsuarios" Grid.Row="1" Grid.Column="0" Margin="0,0,20,0"
                  Background="#1E1E1E" RowBackground="#222" AlternatingRowBackground="#333" 
                  Foreground="White" HeadersVisibility="Column" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionChanged="DgUsuarios_SelectionChanged"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333" BorderThickness="0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding Username}" Width="120" FontWeight="Bold"/>
                <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="CONTRASEÑA" Binding="{Binding Password}" Width="100" Foreground="#666"/>
                <DataGridTextColumn Header="ROL" Binding="{Binding Rol}" Width="90"/>
                <DataGridTextColumn Header="NIVEL BAN" Binding="{Binding GradoBaneo}" Width="80" Foreground="#FF4444" FontWeight="Bold"/>
                <DataGridTextColumn Header="ESTADO / TIEMPO" Binding="{Binding TiempoRestante}" Width="*" FontWeight="SemiBold"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="1" Grid.Column="1" Background="#1A1A1A" BorderBrush="#333" BorderThickness="1" CornerRadius="5" Padding="20">
            <StackPanel x:Name="PanelDetalles" IsEnabled="False" Opacity="0.5">

                <TextBlock Text="EDITAR USUARIO" Foreground="#FFD700" FontWeight="Bold" Margin="0,0,0,15"/>

                <TextBlock Text="Username:" Foreground="Gray"/>
                <TextBox x:Name="txtUsername" Background="#222" Foreground="White" BorderThickness="0" Padding="5" Margin="0,0,0,10" IsReadOnly="True" FontWeight="Bold"/>

                <TextBlock Text="Email:" Foreground="Gray"/>
                <TextBox x:Name="txtEmail" Background="#222" Foreground="White" BorderBrush="#444" BorderThickness="1" Padding="5" Margin="0,0,0,10"/>

                <TextBlock Text="Rol:" Foreground="Gray"/>
                <ComboBox x:Name="cmbRol" Margin="0,0,0,10" Background="#222" Foreground="White" Height="30" BorderBrush="#444">
                    <ComboBoxItem Content="USER"/>
                    <ComboBoxItem Content="GAME_ADMIN"/>
                    <ComboBoxItem Content="SUPPORT_ADMIN"/>
                    <ComboBoxItem Content="USER_ADMIN"/>
                    <ComboBoxItem Content="SUPERADMIN"/>
                </ComboBox>

                <Button Content="💾 GUARDAR CAMBIOS" Click="BtnGuardarDatos_Click" Background="#007ACC" Foreground="White" Height="30" Margin="0,0,0,20" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Separator Background="#333" Margin="0,5"/>

                <TextBlock Text="SEGURIDAD" Foreground="#00E5FF" FontWeight="Bold" Margin="0,10,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtNuevaPass" Grid.Column="0" Background="#222" Foreground="White" BorderBrush="#444" BorderThickness="1" Padding="5" ToolTip="Escribe la nueva contraseña"/>
                    <Button Grid.Column="1" Content="CAMBIAR" Click="BtnCambiarPass_Click" Background="#444" Foreground="White" Margin="5,0,0,0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <Separator Background="#333" Margin="0,15"/>

                <TextBlock Text="CONTROL DE SANCIONES" Foreground="#FF4444" FontWeight="Bold" Margin="0,10,0,5"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Grado Sanción:" Foreground="Gray"/>
                        <ComboBox x:Name="cmbGradoBaneo" Background="#222" Foreground="White" Height="30" BorderBrush="#444">
                            <ComboBoxItem Content="Nivel 1 (24h)"/>
                            <ComboBoxItem Content="Nivel 2 (3 Días)"/>
                            <ComboBoxItem Content="Nivel 3 (1 Sem)"/>
                            <ComboBoxItem Content="Nivel 4 (1 Mes)"/>
                            <ComboBoxItem Content="Nivel 5 (Perm)"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Estado Actual:" Foreground="Gray"/>
                        <TextBlock x:Name="lblEstadoBaneo" Text="ACTIVO" Foreground="#00FF00" FontWeight="Bold" VerticalAlignment="Center" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>

                <TextBlock x:Name="lblFinBaneo" Text="Fin sanción: -" Foreground="Gray" FontSize="11" Margin="0,0,0,10" HorizontalAlignment="Right"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="⛔ APLICAR BAN" Click="BtnSancionar_Click" Background="#B71C1C" Foreground="White" FontWeight="Bold" Height="40" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Grid.Column="2" Content="✅ QUITAR BAN" Click="BtnIndultar_Click" Background="#23A559" Foreground="White" FontWeight="Bold" Height="40" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="➕ CREAR USUARIO" Click="BtnCrearUsuario_Click" Background="#00E5FF" Foreground="Black" FontWeight="Bold" Height="40" Padding="20,0" Margin="0,0,10,0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="📜 VER APELACIONES" Click="BtnVerApelaciones_Click" Background="#FFD700" Foreground="Black" FontWeight="Bold" Height="40" Padding="20,0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <Button Grid.Column="1" Content="CERRAR VENTANA" Click="BtnCerrar_Click" Background="#333" Foreground="White" Height="40" Padding="20,0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>