<Window x:Class="PracticaLogin.AdminUsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Usuarios" Height="650" Width="1200"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#121212" AllowsTransparency="True" BorderBrush="#00E5FF" BorderThickness="1">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ADMINISTRACIÓN DE USUARIOS" Foreground="#00E5FF" FontSize="22" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="0,0,0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="#00E5FF" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <Button Content="✕" Click="BtnCerrar_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" 
                Background="Transparent" Foreground="Gray" FontSize="18" BorderThickness="0" Cursor="Hand"/>

        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#1E1E1E" CornerRadius="5" Padding="5" Margin="0,0,0,15" BorderBrush="#333" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍" Foreground="#888" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBox x:Name="txtBusqueda" Grid.Column="1" Background="Transparent" Foreground="White" BorderThickness="0" 
                             VerticalContentAlignment="Center" FontSize="14" TextChanged="TxtBusqueda_TextChanged"/>
                    <TextBlock Text="Filtrar por nombre..." Grid.Column="1" Foreground="#555" IsHitTestVisible="False" VerticalAlignment="Center" Margin="2,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=txtBusqueda}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <DataGrid Grid.Row="1" x:Name="dgUsuarios" AutoGenerateColumns="False" IsReadOnly="True" 
                      Background="#1E1E1E" RowBackground="#222" AlternatingRowBackground="#2A2A2A"
                      Foreground="White" BorderBrush="#333" GridLinesVisibility="Horizontal" HeadersVisibility="Column" SelectionMode="Single"
                      SelectionChanged="DgUsuarios_SelectionChanged">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#333"/>
                        <Setter Property="Foreground" Value="#00E5FF"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#00E5FF"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                    <DataGridTextColumn Header="USUARIO" Binding="{Binding Username}" Width="100"/>
                    <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="150"/>

                    <DataGridTextColumn Header="CONTRASEÑA" Binding="{Binding Password}" Width="100" Foreground="#888"/>
                    <DataGridTextColumn Header="ROL" Binding="{Binding Rol}" Width="90"/>
                    <DataGridTextColumn Header="NIVEL BAN" Binding="{Binding GradoBaneo}" Width="80" Foreground="#FF4444" FontWeight="Bold"/>
                    <DataGridTextColumn Header="ESTADO / TIEMPO" Binding="{Binding TiempoRestante}" Width="*" FontWeight="SemiBold"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Row="1" Grid.Column="1" Background="#1A1A1A" BorderBrush="#333" BorderThickness="1" CornerRadius="5" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="PanelDetalles" IsEnabled="False" Opacity="0.5">

                        <TextBlock Text="EDITAR DETALLES" Foreground="#00E5FF" FontWeight="Bold" Margin="0,0,0,15"/>

                        <TextBlock Text="Username:" Foreground="Gray"/>
                        <TextBox x:Name="txtUsername" Background="#222" Foreground="White" BorderThickness="0" Padding="8" Margin="0,5,0,10" IsReadOnly="True" FontWeight="Bold"/>

                        <TextBlock Text="Email:" Foreground="Gray"/>
                        <TextBox x:Name="txtEmail" Background="#222" Foreground="White" BorderBrush="#444" BorderThickness="1" Padding="8" Margin="0,5,0,10"/>

                        <TextBlock Text="Rol:" Foreground="Gray"/>
                        <ComboBox x:Name="cmbRol" Margin="0,5,0,10" Background="#222" Foreground="White" Height="35" BorderBrush="#444">
                            <ComboBoxItem Content="USER"/>
                            <ComboBoxItem Content="GAME_ADMIN"/>
                            <ComboBoxItem Content="SUPPORT_ADMIN"/>
                            <ComboBoxItem Content="USER_ADMIN"/>
                            <ComboBoxItem Content="SUPERADMIN"/>
                        </ComboBox>

                        <Button Content="💾 GUARDAR CAMBIOS" Click="BtnGuardarDatos_Click" Background="#007ACC" Foreground="White" Height="35" Margin="0,0,0,20" Cursor="Hand" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Separator Background="#333" Margin="0,5"/>

                        <TextBlock Text="SEGURIDAD" Foreground="#00E5FF" FontWeight="Bold" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtNuevaPass" Grid.Column="0" Background="#222" Foreground="White" BorderBrush="#444" BorderThickness="1" Padding="8"/>
                            <Button Grid.Column="1" Content="CAMBIAR" Click="BtnCambiarPass_Click" Background="#444" Foreground="White" Margin="5,0,0,0" Cursor="Hand" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>

                        <Separator Background="#333" Margin="0,15"/>

                        <TextBlock Text="CONTROL DE SANCIONES" Foreground="#FF4444" FontWeight="Bold" Margin="0,10,0,5"/>
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Estado Actual:" Foreground="Gray"/>
                            <TextBlock x:Name="lblEstadoBaneo" Text="ACTIVO" Foreground="#00FF00" FontWeight="Bold" FontSize="14" Margin="0,2"/>

                            <TextBlock Text="Nivel de Sanción:" Foreground="Gray" Margin="0,5,0,0"/>
                            <ComboBox x:Name="cmbGradoBaneo" Background="#222" Foreground="White" Height="30" BorderBrush="#444" Margin="0,2,0,5">
                                <ComboBoxItem Content="Nivel 1 (24h)"/>
                                <ComboBoxItem Content="Nivel 2 (3 Días)"/>
                                <ComboBoxItem Content="Nivel 3 (1 Sem)"/>
                                <ComboBoxItem Content="Nivel 4 (1 Mes)"/>
                                <ComboBoxItem Content="Nivel 5 (Perm)"/>
                            </ComboBox>
                            <TextBlock x:Name="lblFinBaneo" Text="Fin sanción: -" Foreground="Gray" FontSize="11" HorizontalAlignment="Right"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="⛔ BANEAR" Click="BtnSancionar_Click" Background="#B71C1C" Foreground="White" FontWeight="Bold" Height="40" Cursor="Hand" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Grid.Column="2" Content="✅ INDULTAR" Click="BtnIndultar_Click" Background="#23A559" Foreground="White" FontWeight="Bold" Height="40" Cursor="Hand" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,15,0,0">
                    <Button Content="➕ CREAR USUARIO" Click="BtnCrearUsuario_Click" Background="#333" Foreground="#00E5FF" FontWeight="Bold" Height="35" Margin="0,0,0,10" Cursor="Hand" BorderThickness="1" BorderBrush="#00E5FF">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="📜 VER APELACIONES" Click="BtnVerApelaciones_Click" Background="#333" Foreground="#FFD700" FontWeight="Bold" Height="35" Cursor="Hand" BorderThickness="1" BorderBrush="#FFD700">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>