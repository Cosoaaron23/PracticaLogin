<Window x:Class="PracticaLogin.ComunidadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Comunidad AKAY" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="#121212" BorderBrush="#00E5FF" BorderThickness="1"
        MouseDown="Window_MouseDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <TextBlock Text="ÚLTIMAS NOTICIAS" Foreground="#00E5FF" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                    <Border Background="#1A1A1A" CornerRadius="10" Margin="0,0,0,20" Padding="0">
                        <StackPanel>
                            <Border Height="150" CornerRadius="10,10,0,0" Background="#222">
                                <TextBlock Text="🎮" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                            </Border>
                            <StackPanel Margin="15">
                                <TextBlock Text="¡ACTUALIZACIÓN 2.0 YA DISPONIBLE!" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="Hemos mejorado el rendimiento del launcher y añadido soporte para descargas en segundo plano. ¡Disfruta!" Foreground="#999" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                <TextBlock Text="Hace 2 horas" Foreground="#00E5FF" FontSize="10" Margin="0,10,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#1A1A1A" CornerRadius="10" Margin="0,0,0,20" Padding="15">
                        <StackPanel>
                            <TextBlock Text="OFERTAS DE VERANO" Foreground="#FFD700" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Prepárate para los descuentos más agresivos del año. Hasta un 80% en títulos seleccionados." Foreground="#999" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1A1A1A" CornerRadius="10" Margin="0,0,0,20" Padding="15">
                        <StackPanel>
                            <TextBlock Text="MANTENIMIENTO PROGRAMADO" Foreground="#B71C1C" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Los servidores estarán inactivos este domingo de 3:00 a 5:00 AM para mejoras de infraestructura." Foreground="#999" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Background="#181818" BorderBrush="#333" BorderThickness="1,0,0,0">
            <StackPanel Margin="20">
                <Button Content="✕" Click="BtnCerrar_Click" HorizontalAlignment="Right" Background="Transparent" Foreground="Gray" BorderThickness="0" FontSize="16" Cursor="Hand"/>

                <TextBlock Text="REDES SOCIALES" Foreground="#888" FontWeight="Bold" Margin="0,20,0,10"/>

                <Button Content="DISCORD OFICIAL" Height="40" Background="#5865F2" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" Click="BtnSocial_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="TWITTER / X" Height="40" Background="#000" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" BorderBrush="#333" BorderThickness="1" Click="BtnSocial_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="YOUTUBE" Height="40" Background="#FF0000" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" Click="BtnSocial_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Separator Background="#333" Margin="0,20"/>

                <TextBlock Text="ESTADO SERVIDORES" Foreground="#888" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="#00FF00" Margin="0,0,10,0"/>
                    <TextBlock Text="Tienda: ONLINE" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Ellipse Width="10" Height="10" Fill="#00FF00" Margin="0,0,10,0"/>
                    <TextBlock Text="Login: ONLINE" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Ellipse Width="10" Height="10" Fill="Orange" Margin="0,0,10,0"/>
                    <TextBlock Text="Descargas: LENTO" Foreground="White"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>