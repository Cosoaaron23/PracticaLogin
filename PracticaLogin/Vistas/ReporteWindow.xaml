<Window x:Class="PracticaLogin.ReporteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reporte de Actividad" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#121212" BorderBrush="#00E5FF" BorderThickness="2"
        MouseDown="Window_MouseDown">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="📄 REGISTRO DE ACTIVIDAD (LOGS)" Grid.Row="0" 
                   Foreground="#00E5FF" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <Border Grid.Row="1" Background="Black" BorderBrush="#333" BorderThickness="1" CornerRadius="5" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtLogContent" 
                           FontFamily="Consolas" FontSize="14" Foreground="#EEE" 
                           TextWrapping="NoWrap" Text="Cargando datos..."/>
            </ScrollViewer>
        </Border>

        <Button Content="CERRAR REPORTE" Grid.Row="2" Click="BtnCerrar_Click" 
                Height="35" Width="150" Margin="0,15,0,0"
                Background="#333" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>