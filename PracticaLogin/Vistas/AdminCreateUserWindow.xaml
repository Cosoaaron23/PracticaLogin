<Window x:Class="PracticaLogin.AdminCreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Usuario" Height="400" Width="350"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="#151515" BorderBrush="#00E5FF" BorderThickness="1"
        MouseDown="Window_MouseDown">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="NUEVO USUARIO" Foreground="#00E5FF" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#00E5FF" BlurRadius="10" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="Username:" Foreground="#AAA" Margin="0,5"/>
            <TextBox x:Name="txtUser" Background="#222" Foreground="White" BorderThickness="0" Height="30" VerticalContentAlignment="Center" Padding="5"/>

            <TextBlock Text="Contraseña:" Foreground="#AAA" Margin="0,10,0,5"/>
            <TextBox x:Name="txtPass" Background="#222" Foreground="White" BorderThickness="0" Height="30" VerticalContentAlignment="Center" Padding="5"/>

            <TextBlock Text="Email:" Foreground="#AAA" Margin="0,10,0,5"/>
            <TextBox x:Name="txtEmail" Background="#222" Foreground="White" BorderThickness="0" Height="30" VerticalContentAlignment="Center" Padding="5"/>

            <TextBlock Text="Rol:" Foreground="#AAA" Margin="0,10,0,5"/>
            <ComboBox x:Name="cmbRol" Height="30" SelectedIndex="0">
                <ComboBoxItem Content="USER"/>
                <ComboBoxItem Content="ADMIN"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="CREAR" Click="BtnCrear_Click" Width="120" Height="35" Margin="0,0,10,0"
                        Background="#00E5FF" Foreground="Black" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="CANCELAR" Click="BtnCancelar_Click" Width="100" Height="35"
                        Background="#333" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>